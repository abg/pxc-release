#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

SWITCHBOARD_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

cd "${SWITCHBOARD_DIR}" || exit 1

echo "Vetting packages for potential issues..."
go vet ./...

echo "Testing packages..."

GINKGO_FLAGS=(
  -r
  -failOnPending
  -randomizeAllSpecs
  -slowSpecThreshold=20
  -race
  -keepGoing
  -p
)

# shellcheck disable=SC2086
go run github.com/onsi/ginkgo/ginkgo "${GINKGO_FLAGS[@]}" "$@"
